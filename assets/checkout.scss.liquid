//region Variables
$mobile: "screen and (max-width: 767px)";
$desktop: "screen and (min-width: 768px)";
$tablet-width: 768px;

//Colours
$dodger-blue: rgba(37,147,249,1);
$radical-red: rgba(255,36,98,1);
//$mountain-meadow: rgba(25,177,96,1);
$jungle-green: rgba(39,176,99,1);
$sunglow: rgba(255,217,39,1);
//endregion

//region Mixins
@mixin mobile-only {
  @media (max-width: #{$tablet-width - 1px}) {
    @content;
  }
}
@mixin desktop {
  @media (min-width: #{$tablet-width}) {
    @content;
  }
}
//endregion


#header {
  width: 100%;
  background: #fff;
  padding: 0;
  border-bottom: 2px solid #ebebeb;

  .page-header {
    position: relative; /* TODO Kuz: Check if this is necessary */
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2.92vw 4.8vw 1.74vw;

    @include desktop {
      padding: 0.5vw 0;
      justify-content: space-around;
    }

    .text-logo {
      order: 2;
      text-transform: uppercase;
      font-size: 6.8vw;
      color: black;
      text-decoration: none;

      @include desktop {
        order: 1;
        font-size: 1.75vw;
      }
    }

    .top-nav {
      order: 1;

      @include desktop {
        order: 2;
      }

      nav {
        font-weight: 500;
        letter-spacing: 0.05em;

        @include mobile-only {
          position: absolute;
          background: white;
          left: 0;
          top: 3em;
        }

        a {
          text-transform: uppercase;
          margin: 0 1.6em;

          @include desktop {
            font-size: 1.12vw;
          }

          @include mobile-only {
            display: block;
          }

          &:hover {

          }
        }
      }


    }

    .cart-wrap {
      order: 3;
      display: inline-flex;
      align-items: center;
    }

    .current-cart {
      display: inline-flex;
      justify-content: center;
      align-items: center;
      width: 7.74vw;
      height: 7.74vw;
      position: relative;
      text-align: center;
      font-weight: bold;
      font-size: 3.07vw;
      color: $dodger-blue;

      @include desktop {
        width: 30px;
        height: 30px;
        font-size: 12px;
      }

      &:hover {
        color: $jungle-green;
        cursor: pointer;

        svg {
          .cls-1 {
            fill: $jungle-green;
          }
        }
      }

      svg {
        width: 100%;

        .cls-1 {
          fill: $dodger-blue;
        }
      }
      span {
        position: absolute;
        top: 33%;
      }
    }

  }
}
.secure-payment {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-family: "Brandon Grotesque";
  font-weight: 500;
  font-size: 2.9vw;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  padding: 0.2vw;
  background-color: #f8f8f8;

  @include desktop {
    font-size: 0.8vw;
    justify-content: center;
  }

  span {
    text-align: center;
    @include desktop {
      margin: 0 5em;
    }
  }

  & > img {
    height: 6.4vw;

    @include desktop {
      height: 1.7vw;
    }
  }

}