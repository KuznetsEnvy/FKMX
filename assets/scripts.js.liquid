      var newImage = Shopify.Image.removeProtocol(variant.featured_image.src);
      //Find and click matching thumb
      $('.thumbnails a.thumbnail').filter('[href="' + newImage + '"]').trigger('click');
    }

    $('#sku').html(!variant ? '' : variant.sku);
  };

